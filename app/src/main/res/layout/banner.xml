<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:layout_gravity="bottom"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ibNav"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageWhatsUp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/tvPhoneNumber"
            android:layout_marginLeft="5dp"
            android:layout_weight="0"
            android:clickable="true"
            app:srcCompat="@drawable/whatsup" />

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/imageWhatsUp"
            android:layout_weight="0"
            android:singleLine="false"
            android:text=" 8-926-306-7474, 8-985-344-2627"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <TextView
        android:id="@+id/tveMail"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/ibNav"
        android:gravity="center"
        android:text="www.ricgold.com@yandex.ru"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <ImageButton
        android:id="@+id/ibEmail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/email"
        android:onClick="emailAd"
        android:background="@drawable/selector_btn_bg"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/imageButton"
        android:background="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ibCall"
        android:onClick="callAd"
        android:layout_toLeftOf="@+id/ibEmail"
        android:layout_toStartOf="@+id/ibEmail"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_btn_bg"
        android:src="@drawable/tel"
        android:layout_marginTop="6dp" />

    <ImageButton
        android:id="@+id/ibNav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@+id/ibCall"
        android:background="@drawable/selector_btn_bg"
        android:onClick="info"
        android:src="@drawable/info"
        android:visibility="invisible" />


</RelativeLayout>
