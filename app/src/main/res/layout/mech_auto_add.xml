<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/llMech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Механика"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_normal" />

        <EditText
            android:id="@+id/tvAmount_mt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="0"
            android:inputType="number"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_large"
            android:clickable="false"
            android:maxLength="3"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_minus_mt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/btn_bg_color"
                android:text="-"
                android:textColor="@color/btn_text_color"
                android:textSize="@dimen/size_text_normal" />

            <Button
                android:id="@+id/btn_plus_mt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/btn_bg_color"
                android:text="+"
                android:textColor="@color/btn_text_color"
                android:textSize="@dimen/size_text_normal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Автомат"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_normal" />

        <EditText
            android:id="@+id/tvAmount_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="0"
            android:inputType="number"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_large"
            android:maxLength="3"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button

                android:id="@+id/btn_minus_at"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/btn_bg_color"
                android:text="-"
                android:textColor="@color/btn_text_color"
                android:textSize="@dimen/size_text_normal" />

            <Button
                android:id="@+id/btn_plus_at"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/btn_bg_color"
                android:text="+"
                android:textColor="@color/btn_text_color"
                android:textSize="@dimen/size_text_normal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>